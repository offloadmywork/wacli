{
  "name": "wacli",
  "version": "0.1.0",
  "description": "WhatsApp CLI for reading messages from groups and DMs",
  "type": "module",
  "bin": {
    "wacli": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/cli.ts --format esm --dts",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["whatsapp", "cli", "messaging", "baileys"],
  "author": "Offload",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/offloadmywork/wacli.git"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "commander": "^13.0.0",
    "date-fns": "^4.1.0",
    "pino": "^9.0.0",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.6.0"
  }
}
